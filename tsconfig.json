{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceRoot": "./src",
    "mapRoot": "./build",
    "forceConsistentCasingInFileNames": true
  }
}
